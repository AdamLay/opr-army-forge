{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/adamlay/opr-army-forge/definitions/equipment.schema.json",
    "title": "Equipment definition schema",
    "description": "Equipment definition schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "range": {
            "type": "integer"
        },
        "attacks": {
            "type": "integer"
        },
        "cost": {
            "type": "integer"
        },
        "count": {
            "type": "integer"
        },
        "specialRules": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        }
    },
    "required": [
        "name"
    ]
}