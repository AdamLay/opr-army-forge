{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/AdamLay/opr-army-forge/master/public/definitions/army.schema.json",
    "title": "Army definition schema",
    "description": "Army definition schema",
    "type": "object",
    "required": [
        "name",
        "version",
        "units",
        "equipment",
        "upgrade_sets"
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "Army name"
        },
        "version": {
            "type": "string",
            "description": "Army document version"
        },
        "url": {
            "type": "string"
        },
        "units": {
            "type": "array",
            "description": "Unit definitions",
            "items": {
                "type": "object",
                "description": "Unit definition",
                "properties": {
                    "category": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "size": {
                        "type": "integer"
                    },
                    "cost": {
                        "type": "integer"
                    },
                    "quality": {
                        "type": "string",
                        "enum": [
                            "2+",
                            "3+",
                            "4+",
                            "5+",
                            "6+"
                        ]
                    },
                    "defense": {
                        "type": "string",
                        "enum": [
                            "2+",
                            "3+",
                            "4+",
                            "5+",
                            "6+"
                        ]
                    },
                    "specialRules": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "uniqueItems": true
                    },
                    "equipment": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "equipment_id": {
                                    "type": "string"
                                },
                                "count": {
                                    "type": "integer"
                                }
                            }
                        },
                        "uniqueItems": true
                    },
                    "upgrade_sets": {
                        "description": "Array of upgrade set IDs available to this unit",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "uniqueItems": true
                        }
                    }
                }
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "equipment": {
            "type": "array",
            "description": "Equipment definitions",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "range": {
                        "type": "integer"
                    },
                    "attacks": {
                        "type": "integer"
                    },
                    "specialRules": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "uniqueItems": true
                    }
                },
                "required": [
                    "id",
                    "name"
                ]
            }
        },
        "upgrade_sets": {
            "type": "array",
            "description": "Upgrade set definitions",
            "items": {
                "type": "object",
                "description": "Upgrade set definition",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "upgrades": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "enum": [
                                        "replace",
                                        "upgrade",
                                        "upgradeRule"
                                    ]
                                },
                                "affects": {
                                    "description": "e.g. Upgrade ANY model with, Upgrade ONE model with, Upgrade ALL models with",
                                    "enum": [
                                        "any",
                                        "one",
                                        "all"
                                    ]
                                },
                                "select": {
                                    "description": "e.g. Upgrade with ONE, Upgrade with ANY",
                                    "enum": [
                                        "any",
                                        "one"
                                    ]
                                },
                                "replacesWhat": {
                                    "description": "Replace any WEAPON with, Upgrade PSYCHIC(2)",
                                    "type": "string"
                                },
                                "options": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "https://raw.githubusercontent.com/AdamLay/opr-army-forge/master/public/definitions/equipment.schema.json"
                                    },
                                    "uniqueItems": true
                                }
                            }
                        },
                        "uniqueItems": true
                    }
                }
            },
            "uniqueItems": true
        }
    }
}